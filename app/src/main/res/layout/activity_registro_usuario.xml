<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/catdog">


    <TextView
        android:id="@+id/txtRegistrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txt_ingresedatos"
        android:textSize="25dp"
        android:textColor="@color/colortxtviews"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/edtNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/background_edittext"
        android:gravity="center"
        android:hint="@string/txt_nombre"

        android:layout_below="@+id/txtRegistrate"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/edtCorreoIng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/background_edittext"
        android:hint="@string/txt_correo_ing"
        android:gravity="center"

        android:layout_below="@+id/edtNombreUsuario"
        android:layout_alignStart="@+id/edtNombreUsuario"
        android:layout_marginTop="30dp"/>


    <EditText
        android:id="@+id/edtNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:background="@drawable/background_edittext"
        android:hint="@string/txt_pass_ing"
        android:gravity="center"

        android:layout_below="@+id/edtCorreoIng"
        android:layout_alignStart="@+id/edtCorreoIng"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/edtConPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:background="@drawable/background_edittext"
        android:hint="@string/txt_pass_rep"
        android:gravity="center"

        android:layout_below="@+id/edtNewPassword"
        android:layout_alignStart="@+id/edtCorreoIng"
        android:layout_marginTop="30dp"/>


    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_button"
        android:text="@string/btn_sig"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        />


</RelativeLayout>