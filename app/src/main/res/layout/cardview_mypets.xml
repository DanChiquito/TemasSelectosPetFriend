<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <ImageView
            android:id="@+id/imvPet"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:srcCompat="@tools:sample/avatars[3]"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/txtNamePet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_name_pet"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold"
            
            android:layout_toRightOf="@+id/imvPet"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/txtHoraComer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_hora_comer"
            android:textSize="20sp"

            android:layout_alignStart="@+id/txtNamePet"
            android:layout_below="@+id/txtNamePet"
            android:layout_marginTop="2dp"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>

